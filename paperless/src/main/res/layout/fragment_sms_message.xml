<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_sms_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Message: "
        android:textSize="@dimen/font_size_dialog_title"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_sms_message_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_custom"
        android:paddingBottom="@dimen/button_padding_topbottom"
        android:paddingTop="@dimen/button_padding_topbottom"
        android:text="@string/button_send_sms"
        android:textSize="@dimen/font_size_button"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_sms_message_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_sms_message_send"
        android:layout_below="@id/text_sms_message_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:gravity="top|left"
        android:padding="8dp" />

</RelativeLayout>