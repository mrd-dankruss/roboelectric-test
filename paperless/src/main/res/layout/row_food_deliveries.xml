<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@drawable/deliveries_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/background_grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/deliveries_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/deliveries_imageView_deliveryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/contentDesc_imageView_deliveryType"
                android:paddingLeft="14dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/icon_food" />

            <TextView
                android:id="@+id/deliveries_textView_deliveryNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:paddingTop="15dp"
                android:text="@string/delivery_no"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="16sp"
                android:layout_marginTop="19dp"
                android:background="@color/seperator_grey"
                android:paddingTop="19dp" />

            <TextView
                android:id="@+id/deliveries_textView_titleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="@string/delivery_title"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/deliveries_imageView_companyLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/contentDesc_imageView_deliveryType"
                    android:paddingRight="6dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:background="@color/seperator_grey" />

        <TextView
            android:id="@+id/deliveries_textView_delivery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="Expected delivery time: 15:00"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_delivery_details_address" />

        <TextView
            android:id="@+id/deliveries_textView_pick_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="Pick up:"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_delivery_details_address" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical" >
            
            <TextView
            android:id="@+id/deliveries_textView_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="• Simply Asia, Somerset Mall\n• Nandos, Somerset Mall"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_delivery_details_address"
            android:textStyle="bold" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/deliveries_textView_deliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="Deliver:"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_delivery_details_address" />

        <TextView
            android:id="@+id/deliveries_textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="15 Remus Street\nRome Glen\nSomerset West\n4752"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_delivery_details_address"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/deliveries_linearLayout_buttonsHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp" >

            <Button
                android:id="@+id/deliveries_button_updateStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/delivery_button1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_button" />

            <Button
                android:id="@+id/deliveries_button_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/button_custom_grey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/delivery_button2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>