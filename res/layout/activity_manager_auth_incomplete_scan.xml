<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colour_background"
    tools:context=".ManagerAuthIncompleteScanActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/textView_manAuth_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/text_manAuth_heading"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_manAuth_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_manAuth_manager_name"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/text_manAuth_heading" />

        <TextView
            android:id="@+id/textView_manAuth_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_manAuth_heading"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="TextView" />

        <Button
            android:id="@+id/button_manAuth_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_manAuth_pin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_custom"
            android:text="@string/button_continue"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_manAuth_pin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_pin"
            android:layout_below="@+id/textView_manAuth_list"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colour_white"
            android:ems="10"
            android:inputType="numberPassword"
            android:paddingLeft="@dimen/margin_pin_left" />

        <Button
            android:id="@+id/button_manAuth_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_custom_grey"
            android:text="@string/button_change_manager"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toast_man_auth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toast_red"
        android:paddingBottom="@dimen/margin_standard"
        android:paddingTop="@dimen/margin_standard"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/textView_man_auth_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_standard"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/text_scan_successful"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>