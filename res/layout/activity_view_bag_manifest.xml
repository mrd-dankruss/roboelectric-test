<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBagManifestActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colour_darkgrey"
        android:paddingBottom="@dimen/margin_manifest_panel_NS"
        android:paddingLeft="@dimen/margin_manifest_panel_W"
        android:paddingRight="@dimen/margin_manifest_panel_W"
        android:paddingTop="@dimen/margin_manifest_panel_NS" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_manifest_consignment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/colour_text_darkergrey"
                android:textSize="@dimen/font_size_manifest_panel" />

            <TextView
                android:id="@+id/textView_manifest_consignment_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination branch: whatdoes the fox say ringadingding a hatee hatee hatee ho"
                android:textColor="@color/colour_text_darkergrey"
                android:textSize="@dimen/font_size_manifest_panel" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:headerDividersEnabled="true" >

    </ListView>

</RelativeLayout>