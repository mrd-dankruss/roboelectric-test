<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ab_solid_mrdstyle"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textView_trafficDelay_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/title_actionbar_change_driver"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_dialog_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/seperator_grey" />

            <ImageButton
                android:id="@+id/button_change_user_closeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/icon_cancel_unselected" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/text_change_driver_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to log out Megan Cox?"
            android:textSize="@dimen/font_size_dialog_content"
            android:background="@color/main_activity_grey"
            android:padding="14dp"/>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_grey" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button
            android:id="@+id/button_change_user_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_change_driver"
            android:text="@string/button_cancel"
            android:textSize="@dimen/font_size_button"
            android:layout_weight="1" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/seperator_grey" />
            
            <Button
            android:id="@+id/button_change_user_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_change_driver"
            android:text="@string/button_ok"
            android:textSize="@dimen/font_size_button"
            android:layout_weight="1" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>