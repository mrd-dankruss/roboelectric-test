<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:id="@+id/linearLayout_not_assigned"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ab_solid_mrdstyle"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textView_not_assigned_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/text_incomplete_scan_title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_dialog_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/seperator_grey" />

            <ImageButton
                android:id="@+id/button_not_assigned_closeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/icon_cancel_unselected" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_not_assigned_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_grey"
            android:padding="14dp"
            android:text="@string/text_not_assigned_message"
            android:textSize="@dimen/font_size_dialog_content" />


        <Button
            android:id="@+id/button_not_assigned_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_change_driver"
            android:text="@string/button_not_assigned_cancel"
            android:textSize="@dimen/font_size_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/seperator_grey" />

        <Button
            android:id="@+id/button_not_assigned_continue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_change_driver"
            android:text="@string/button_not_assigned_continue"
            android:textSize="@dimen/font_size_button" />
    </LinearLayout>

</LinearLayout>