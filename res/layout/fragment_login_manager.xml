<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/main_activity_grey" >

    <TextView android:id="@id/manager_auth_reason" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:layout_below="@+id/text_incomplete_scan_activity_name"
              android:layout_marginTop="@dimen/activity_vertical_margin" android:text="@string/text_manAuth_heading"
              android:textSize="@dimen/font_size_dialog_content" android:layout_margin="24dp"
              android:layout_marginLeft="24dp" android:layout_marginRight="24dp"/>
    <TextView android:id="@id/man_auth_extra" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:layout_below="@+id/textView_incomplete_scan_activity_heading"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:text="985678hd368\n00002534462\nWWW857428\nWWW946483"
              android:textSize="@dimen/font_size_dialog_content" android:layout_margin="24dp"/>
    <TextView android:id="@id/manager_auth_title" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true" android:text="Jim Davids"
              android:textSize="@dimen/font_size_dialog_title" android:layout_margin="24dp"/>
    <AutoCompleteTextView
            android:id="@+id/text_login_screen_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:paddingBottom="@dimen/button_padding_topbottom"
            android:paddingTop="@dimen/button_padding_topbottom"
            android:hint="@string/text_hint_mainmenu_enter_name"
            android:background="@color/white"
            android:textColor="@color/text_grey"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/font_size_text_field" />

    <EditText
            android:id="@+id/text_login_screen_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:paddingBottom="@dimen/button_padding_topbottom"
            android:paddingTop="@dimen/button_padding_topbottom"
            android:hint="@string/text_hint_mainmenu_enter_password"
            android:background="@color/white"
            android:textColor="@color/text_grey"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/font_size_text_field"
            android:inputType="numberPassword" />

    <Button
            android:id="@+id/button_login_screen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/button_custom"
            android:paddingBottom="@dimen/button_padding_topbottom"
            android:paddingTop="@dimen/button_padding_topbottom"
            android:text="@string/button_login"
            android:textSize="@dimen/font_size_button" />

</LinearLayout>
