<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/main_activity_grey" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/ab_solid_mrdstyle"
            android:padding="0dp" >

        <TextView
                android:id="@+id/textView_trafficDelay_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:text="Manager Authorization"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_dialog_title" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right" >

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/seperator_grey" />

            <ImageButton
                    android:id="@+id/button_manager_auth_closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:src="@drawable/icon_cancel_unselected" />
        </LinearLayout>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/text_login_screen_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:paddingBottom="@dimen/button_padding_topbottom"
        android:paddingTop="@dimen/button_padding_topbottom"
        android:hint="Tap here to enter your name"
        android:background="@color/white"
        android:textColor="@color/text_grey"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="@dimen/font_size_text_field" />
    
    <EditText
        android:id="@+id/text_login_screen_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:paddingBottom="@dimen/button_padding_topbottom"
        android:paddingTop="@dimen/button_padding_topbottom"
        android:hint="@string/text_hint_mainmenu_enter_password"
        android:background="@color/white"
        android:textColor="@color/text_grey"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="@dimen/font_size_text_field"
        android:inputType="numberPassword" />
    
    <Button
        android:id="@+id/button_login_screen_select_manager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/button_custom"
        android:paddingBottom="@dimen/button_padding_topbottom"
        android:paddingTop="@dimen/button_padding_topbottom"
        android:text="Authorize"
        android:textSize="@dimen/font_size_button" />

</LinearLayout>
