<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_light_grey"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/reportDelay_textView_mainText"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:paddingLeft="14dp"
        android:text="Traffic"
        android:textSize="20sp"
        android:textColor="@color/reportDelay_mainText" />

     <TextView 
         	android:id="@+id/reportDelay_textView_subText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center_vertical"
            android:paddingRight="14dp"
            android:text="10 min"
            android:textSize="18sp"
            android:textColor="@color/reportDelay_subText"
            android:visibility="gone" />
    
</LinearLayout>