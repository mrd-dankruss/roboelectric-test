<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_row_NS"
    android:layout_marginLeft="@dimen/margin_standard"
    android:layout_marginTop="@dimen/margin_row_NS"
    android:columnCount="2"
    android:rowCount="3" >

    <TextView
        android:id="@+id/textView_manifest_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_manifest_waybill"
        android:layout_alignTop="@+id/textView3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="TextView"
        android:textSize="@dimen/font_size_manifest_panel" />

    <com.mrdexpress.paperless.widget.AutoResizeTextView
        android:id="@+id/textView_manifest_volumetrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_manifest_waybill"
        android:layout_alignTop="@+id/textView5"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="2"
        android:text="TextView"
        android:textSize="@dimen/font_size_manifest_panel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_row_scan_number_items"
        android:text="Barcode"
        android:textSize="@dimen/font_size_manifest_panel"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_row_scan_number_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Parcel"
        android:textSize="@dimen/font_size_manifest_panel"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:text="@string/text_manifest_volumetrics"
        android:textSize="@dimen/font_size_manifest_panel"
        android:textStyle="bold" />

    <com.mrdexpress.paperless.widget.AutoResizeTextView
        android:id="@+id/textView_manifest_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_manifest_volume"
        android:layout_alignBottom="@+id/textView_manifest_volume"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textView_manifest_volume"
        android:maxWidth="40dp"
        android:text="TextView"
        android:textSize="@dimen/font_size_manifest_panel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_manifest_waybill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="TextView"
        android:textSize="@dimen/font_size_manifest_panel" />

</RelativeLayout>